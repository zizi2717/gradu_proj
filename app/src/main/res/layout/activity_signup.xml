<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/mainimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat = "@drawable/tutoring">

    </ImageView>

    <TextView
        android:id="@+id/signtext"
        android:layout_below="@id/mainimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#df6d30"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="회원 가입"/>


    <LinearLayout
        android:id="@+id/idline"
        android:layout_below="@+id/signtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#df6d30"
            android:layout_marginRight="15dp"
            android:text="아이디 :" />

        <EditText
            android:id="@+id/w_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/idcheckbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복체크" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pwline"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/idline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#df6d30"
            android:layout_marginRight="15dp"
            android:text="비밀번호 :" />
        <EditText
            android:id="@+id/w_pw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/pwline"
        android:layout_width="match_parent"
        android:id="@+id/pwcheckline"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#df6d30"
            android:layout_marginRight="15dp"
            android:text="비밀번호확인 :" />

        <EditText
            android:id="@+id/w_pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/pwcheckline"
        android:orientation="horizontal"
        android:id="@+id/nameline"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#df6d30"
            android:layout_marginRight="15dp"
            android:text="닉네임 :" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/nameline"
        android:orientation="horizontal"
        android:id="@+id/studentnumline"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView5"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#df6d30"
            android:layout_marginRight="15dp"
            android:text="   학번 :" />

        <EditText
            android:id="@+id/studentnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />


    </LinearLayout>

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentnumline"
        android:layout_centerHorizontal="true"
        android:text="회원가입" />




</RelativeLayout>